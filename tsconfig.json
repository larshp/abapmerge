{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "build",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es2020", "dom"]
    },
    "filesGlob": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "typings"
    ]
}